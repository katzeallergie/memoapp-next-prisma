generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl= env("POSTGRES_URL_NON_POOLING") 
}

model memos {
  id Int @id @default(autoincrement())
  content String
  createdAt DateTime @default(now())
}